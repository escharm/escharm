{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@escharm/layout-react": ["../../packages/layout-react/src"],
      "@escharm/layout-core": ["../../packages/layout-core/src"],
      "@escharm/portal-window": ["../../packages/portal-window/src"],
      "@escharm/dnd-react": ["../../packages/dnd-react/src"],
      "@escharm/sns-react": ["../../packages/sns-react/src"],
      "@escharm/sns-core": ["../../packages/sns-core/src"],
      "@escharm/dnd-core": ["../../packages/dnd-core/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../packages/dnd-core"
    },
    {
      "path": "../../packages/sns-core"
    },
    {
      "path": "../../packages/sns-react"
    },
    {
      "path": "../../packages/dnd-react"
    },
    {
      "path": "../../packages/portal-window"
    },
    {
      "path": "../../packages/layout-core"
    },
    {
      "path": "../../packages/layout-react"
    }
  ]
}
